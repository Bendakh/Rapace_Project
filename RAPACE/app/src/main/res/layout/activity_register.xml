<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".Register">

    <ImageView
        android:layout_width="251dp"
        android:layout_height="218dp"
        android:layout_above="@+id/name_reg"
        android:layout_alignEnd="@+id/loading_progress"
        android:layout_alignRight="@+id/loading_progress"
        android:layout_marginEnd="71dp"
        android:layout_marginRight="71dp"
        android:layout_marginBottom="23dp"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/name_reg"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_above="@+id/admin"
        android:layout_alignStart="@+id/loading_progress"
        android:layout_alignLeft="@+id/loading_progress"
        android:layout_alignEnd="@+id/loading_progress"
        android:layout_alignRight="@+id/loading_progress"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:layout_marginBottom="25dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Login"
        android:inputType="textPersonName"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/admin"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_above="@+id/mail_reg"
        android:layout_alignEnd="@+id/loading_progress"
        android:layout_alignRight="@+id/loading_progress"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="107dp"
        android:layout_marginLeft="107dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:layout_marginBottom="25dp"
        android:text="Admin" />

    <EditText
        android:id="@+id/mail_reg"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_above="@+id/password_reg"
        android:layout_alignEnd="@+id/loading_progress"
        android:layout_alignRight="@+id/loading_progress"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="25dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/password_reg"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_above="@+id/password_confirm"
        android:layout_alignEnd="@+id/loading_progress"
        android:layout_alignRight="@+id/loading_progress"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:layout_marginBottom="25dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/password_confirm"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_above="@+id/register_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="106dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="50dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:textSize="16sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/register_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/go_to_login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textColor="#fff"
                android:textSize="24sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ProgressBar
        android:id="@+id/loading_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/go_to_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="71dp"
        android:text="Go to login" />



</RelativeLayout>